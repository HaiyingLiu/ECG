<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wu.rang.hao.ecgapplication.MainActivity" >
	<EditText
	    android:id="@+id/editViewId1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="name"
	    android:gravity="center"/>
	<EditText
	    android:id="@+id/editViewId2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="age"
	    android:gravity="center"/>
	<EditText
	    android:id="@+id/editViewId3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="用药情况"
	    android:gravity="center"/>
	
    <Button
        android:id="@+id/buttonIdSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG信号的采集" 
        android:gravity="center"/>
    <TextView
        android:id="@+id/textViewId1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="实时的对采集信号时的波形进行显示的区域，"
        android:gravity="center" />
     <Button
        android:id="@+id/buttonIdContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于此人的采集的ECG信号的一些基本信息（eg：采集的时间）" />
     <TextView
        android:id="@+id/textViewId2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="基本信息的输出区域"
        android:gravity="center" />
    <Button
        android:id="@+id/buttonIdDeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG信号的处理" />
    <TextView
        android:id="@+id/textViewId3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="处理后的结果显示区域" />

</LinearLayout>
